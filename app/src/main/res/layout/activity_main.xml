<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.velha.da.jogo.admin.jogodavelha.MainActivity">

    <GridLayout
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:id="@+id/gridLayout"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#febbbb"
        android:rowCount="3"
        android:columnCount="3">

        <Button
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:id="@+id/btn1"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:id="@+id/btn2"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:id="@+id/btn3"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:id="@+id/btn4"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:id="@+id/btn5"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:id="@+id/btn6"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:id="@+id/btn7"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:id="@+id/btn8"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:id="@+id/btn9"
            android:layout_row="2"
            android:layout_column="2" />
    </GridLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/vezID"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="É a vez do:"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/vezID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:id="@+id/resetID"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O jogo ainda não terminou!"
        android:id="@+id/textID"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
